@model NativeSQL.Models.Students

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<table>
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Age</th>
        <td>@Model.Age</td>
    </tr>

</table>

<div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <div class="modal-header">
            <span class="close">&times;</span>
            <h2>Confirm Delete</h2>
        </div>
        <div class="modal-body">
            <p>are you sure to delete this student</p>
            <form action="/Students/Delete" method="post">
                <input type="text" name="Id" placeholder="Id" value="@Model.Id" hidden="hidden" />
                <input type="submit" value="delete"/>
            </form>
        </div>
       
    </div>

</div>


