
@{
    ViewBag.Title = "UplodingVideoOnly";
}

@using (Html.BeginForm("UplodingVideoOnly", "Uploding_Display", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div>
        <input type="file" name="MyFile" style="width:400px;height:50px;font-weight:bold;font-size:25px;margin:10px" placeholder="choose your file" <br />
        <input type="text" name="FileName" style="width:400px;height:50px;font-weight:bold;font-size:25px;;margin:10px" placeholder="Enter file name" /> <br />

        <input type="submit" value="Upload" style="width:200px;height:50px;font-weight:bold;font-size:20px;" />
    </div>


}

<h1>@ViewBag.Message</h1>

@if (ViewBag.ImageSrc != null)
{
    <div style="width:50%;height:500px;margin:50px auto">
        <video controls>
            <source src="@ViewBag.ImageSrc" type="video/mp4">
            <source src="@ViewBag.ImageSrc" type="video/x-flv">
            <source src="@ViewBag.ImageSrc" type="video/x-msvideo">
            <source src="@ViewBag.ImageSrc" type="video/x-ms-wmv">
            Your browser does not support the video tag.
        </video>
    </div>
}


