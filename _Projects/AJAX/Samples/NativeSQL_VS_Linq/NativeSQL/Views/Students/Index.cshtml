@model IEnumerable<NativeSQL.Models.Students>

@{
    ViewBag.Title = "Index";
}



<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

@using (Ajax.BeginForm("Search","Students", new AjaxOptions() { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "AjaxResult"  }))
{
    <input type="text" placeholder="Search by Name..." name="Search" id="Search">
    <input type="submit" name="name" value="go" id="go">
}

<div id="AjaxResult">
    <table>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>age</th>
            <th>Crud Operation</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>
                      <a href="~/Students/Details/@item.Id"> Details</a>
                    | <a href="~/Students/Edit/@item.Id"> Edit</a>
                    | <a href="~/Students/Delete/@item.Id"> Delete </a>
                </td>
            </tr>
            }
    </table>
</div>

